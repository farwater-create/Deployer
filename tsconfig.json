  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "sourceRoot": "src",
    "rootDir": "src",
    "outDir": "build"
  },
  "exclude": ["node_modules"]
}
